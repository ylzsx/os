<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".bussiness.activity.PasswordActivity">

    <ImageView
        android:id="@+id/img_pwd"
        android:src="@drawable/ic_neuq"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_password"
        android:text="登陆"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/edt_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_password_eye_open"
        android:visibility="gone"
        android:layout_marginRight="14dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/edt_pwd"
        android:src="@drawable/ic_eye"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <View
        android:id="@+id/view_password_blind"
        android:layout_marginRight="14dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/edt_pwd"
        android:src="@drawable/ic_eye"
        android:layout_width="40dp"
        android:layout_height="10dp"
        android:background="#29B6F6"/>



    <EditText
        android:inputType="textPassword"
        android:hint="密码"
        android:id="@+id/edt_pwd"
        android:background="@null"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/relative_pwd"
        android:background="@drawable/bg_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/edt_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/tv_password_or_sign_up"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启OS"
            android:textColor="#ffffff"/>

    </RelativeLayout>

</RelativeLayout>